/* pages/mission/mission.wxss */
.missionlist{
  height: 800rpx;
  width: 94%;
  margin-top: 5rpx;
  margin-left: 20rpx;
  margin-bottom: 15rpx ;
  box-shadow: 5px 5px 5px #cdcfcf;
  display: flex;
  background-color: white;
  border: 1rpx solid #f7f7f7;
  border-radius: 20rpx;
}
.content{
  background-color: #fff;
  display: flex;
  flex-direction: row;
  margin: 15rpx 15rpx;
  align-items: center;
  position: relative;
  border: 1rpx solid #eee; 
  border-radius: 10rpx;
  box-shadow: 5px 5px 5px #cdcfcf;
  position:relative;
  /* box-shadow: 5px 5px 5px #cdcfcf; */
}
.content image{
  margin: 20rpx;
}
.content button{
  width: 100rpx;
}
.arrow{
  padding: 20rpx;
  font-size: 25rpx;
}
.missionsta{
  background:rgb(14, 126, 101);
  border: 1rpx solid #eee;
  font-size: 25rpx;
  height: 60rpx;
  width: 100rpx;
  text-align: center;
  color: white;
  border-radius: 20rpx; 
  position:absolute;
  margin-left: 580rpx;
}
.content:nth-child(1n+0){
  background:#e3efee;
}
.content:nth-child(2n+0){
  background: #f6f6f6;
}
.listhead{
  background-color: #fff;
  display: flex;
  height: 100rpx;
  font-size: 25rpx;
  color: white;
  flex-direction: row;
  margin: 15rpx 15rpx;
  align-items: center;
  position: relative;
  border: 1rpx solid #eee; 
  border-radius: 10rpx;
  box-shadow: 5px 5px 5px #cdcfcf;
  position:relative;
  background-color: #00afa5;
}
.missionsta1{
  text-align: center;
  border-radius: 20rpx; 
  position:absolute;
  margin-left: 580rpx;  
}
